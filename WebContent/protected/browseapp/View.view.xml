<mvc:View height="100%" class="sapUiSizeCompact"
	controllerName="io.rtdi.hanaappcontainer.browseapp.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table"
	xmlns:dnd="sap.ui.core.dnd" 
	xmlns:core="sap.ui.core">
	<l:ResponsiveSplitter defaultPane="default">
		<l:PaneContainer>
			<l:SplitPane requiredParentWidth="400" id="default">
				<Panel height="100%">
					<content>
						<t:TreeTable id="idBrowseTree"
							rows="{path:'/', parameters: {arrayNames:['folders']}}"
							selectionMode="None" enableSelectAll="false"
							ariaLabelledBy="title"
							cellClick="onSelectDir"
							visibleRowCountMode="Auto">
			                <t:extension>
			                    <OverflowToolbar>
			                        <Title id="title" text="Directory for user {/username}"/>
			                        <ToolbarSpacer/>
			                        <Button icon="sap-icon://refresh"
											tooltip="Reinitialize Model"
											press="onDirectoryRefresh"/>
			                    </OverflowToolbar>
			                </t:extension>
							<t:columns>
								<t:Column width="100%">
									<Label text="Directory tree"/>
									<t:template>
										<Text text="{name} ({filecount} files)" wrapping="false" /> 
									</t:template>
								</t:Column>
							</t:columns>
						</t:TreeTable>
					</content>
				</Panel>
			</l:SplitPane>
			<l:SplitPane>
				<List
					id="idFiles"
					headerText="Files"
					items="{
						path: '/'
					}"
					 >
					 <CustomListItem>
						<HBox>
							<!--  core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" / -->
							<Link text="{name}" target="_blank" href="../editorapp/index.html?filename={path}" />
						</HBox>
					</CustomListItem>
				</List>
			</l:SplitPane>
		</l:PaneContainer>
	</l:ResponsiveSplitter>

</mvc:View>
