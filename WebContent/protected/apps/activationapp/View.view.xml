<mvc:View height="100%" class="sapUiSizeCompact" 
	id="mainview"
	controllerName="io.rtdi.hanaappcontainer.activationapp.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table"
	xmlns:dnd="sap.ui.core.dnd" 
	xmlns:ui5libs.controls="ui5libs.controls"
	xmlns:core="sap.ui.core">
	<FlexBox height="100%" direction="Column" >
		<ui5libs.controls:ShellBar secondTitle="Activation App"/>
		<Panel height="100%">
			<l:layoutData>
				<FlexItemData growFactor="1"/>
			</l:layoutData>
			<content>
				<t:TreeTable id="idActivation"
					rows="{path:'/', parameters: {arrayNames:['children']}}"
					selectionMode="None" enableSelectAll="false"
					ariaLabelledBy="title"
					visibleRowCountMode="Auto">
	                <t:extension>
	                    <OverflowToolbar>
	                        <Title id="title" text="Activation"/>
	                        <ToolbarSpacer/>
	                        <Button icon="sap-icon://refresh" tooltip="Run the activation" press="onRun"/>
	                    </OverflowToolbar>
	                </t:extension>
					<t:columns>
						<t:Column width="60%">
							<Label text="Object"/>
							<t:template>
								<Text text="{object/objectName}" wrapping="false" /> 
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="State"/>
							<t:template>
								<Text text="{success}" wrapping="false" /> 
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Info"/>
							<t:template>
								<Text text="{info}" tooltip="{sqltext}" /> 
							</t:template>
						</t:Column>
					</t:columns>
				</t:TreeTable>
			</content>
		</Panel>
	</FlexBox>
</mvc:View>
