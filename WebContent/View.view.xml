<mvc:View height="100%" class="sapUiSizeCompact"
	controllerName="io.rtdi.hanaappcontainer.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:ui5libs.controls="ui5libs.controls"
	>
	<FlexBox height="100%" direction="Column" >
		<ui5libs.controls:ShellBar secondTitle="Editor"/>
		<Page>
			<layoutData>
				<FlexItemData growFactor="1"/>
			</layoutData>
			<customHeader>
				<OverflowToolbar>
					<Text text="All available apps" />
				</OverflowToolbar>
			</customHeader>
			<HBox id="idAppList"
				wrap="Wrap"
				items="{/apps}"
				width="100%"
				height="100%">
				<core:Fragment fragmentName="io.rtdi.hanaappcontainer.ui5libs.fragments.applicationtile" type="XML" />
			</HBox>
		</Page>
	</FlexBox>
</mvc:View>

